apiVersion: v1
kind: Config
clusters:
- name: {{ k3s_cluster_name }}
  cluster:
    server: https://{{ ansible_host }}:6443
    certificate-authority-data: Cg==
contexts:
- name: {{ k3s_cluster_name }}
  context:
    cluster: {{ k3s_cluster_name }}
    user: {{ new_admin_user }}
current-context: {{ k3s_cluster_name }}
users:
- name: {{ new_admin_user }}
  user:
    client-certificate-data: Cg==
    client-key-data: Cg==
